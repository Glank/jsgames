[
  {
    "name": "all",
    "deps": [
      "data:stage_images",
      "data:stage_sound"
    ]
  },
  {
    "name": "stage_images",
    "rule": "stage",
    "in": ["media/images/*"],
    "params": {
      "subdir": "images",
      "stagingdirs": [
        "dev",
        "media"
      ]
    }
  },
  {
    "name": "stage_sound",
    "rule": "stage",
    "in": ["media/sound/*"],
    "params": {
      "subdir": "sound",
      "stagingdirs": [
        "dev",
        "media"
      ]
    }
  }
]
